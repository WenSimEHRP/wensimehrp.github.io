{
  "name": "blog",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "eleventy",
    "dev": "eleventy --serve",
    "typst:link": "mkdir -p ~/.local/share/typst/packages/local/wslib && ln -sfn \"$PWD/wslib\" ~/.local/share/typst/packages/local/wslib/0.1.0",
    "typst:unlink": "rm -f ~/.local/share/typst/packages/local/wslib/0.1.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bun": "latest",
    "tailwindcss": "^4.1.12"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "@fontsource-variable/merriweather-sans": "^5.2.6",
    "@fortawesome/fontawesome-free": "^7.0.0",
    "@myriaddreamin/typst-ts-node-compiler": "^0.6.1-rc3",
    "@myriaddreamin/typst.ts": "^0.6.1-rc3",
    "html-minifier-terser": "^7.2.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-deflist": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "pagefind": "^1.4.0"
  }
}
