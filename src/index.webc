<h2>Recent Articles & Updates</h2>

<a webc:for="post of collections.articles.sort((a, b) => new Date(b.data.created) - new Date(a.data.created))"
    class="card no-underline mb-8 flex" :href="post.url">
    <article class="text-left min-w-full">
        <h3 class="mt-2" @text="post.data.title"></h3>
        <p class="mb-3" @text="post.data.description"></p>
        <span class="text-sm text-gray-500 dark:text-gray-400">
            <i class="fa-solid fa-calendar"></i>
            <span @text="formatDate(post.data.created)" class="mr-2"></span>
            <span webc:if="post.data.wip" class="mr-2">
                <span class="text-sky-600"><i class="fa-solid fa-circle-info mr-1"></i></span><i>WIP</i>
            </span>
            <span webc:for="tag of post.data.tags"
                class="text-xs mr-1 py-0.5 px-1 bg-gray-200 dark:bg-gray-600 rounded-sm" @text="tag"></span>
        </span>
    </article>
</a>
